<%= form_for([@job, @job.comments.build]) do |f| %>
<br>
  <%= f.text_area :comment %>
  <br>
  <br>
  <%= f.submit%>
<% end %>

<br>

<% @comments.each do |comment| %>

<br>
<p> <%= comment.comment %> </p>
<p><%= time_ago_in_words(comment.created_at) %> ago</p>


<%= link_to "Delete", [comment.job, comment], method: :delete,  data: { confirm: 'Are you sure you would like to delete this comment?' } %>

<br>
<br>

<% end %>
<br>
